{
  "name": "penx-cloudflare",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply test --local",
    "db:migrate:preview": "wrangler d1 migrations apply --env preview preview",
    "db:migrate:prod": "wrangler d1 migrations apply test --remote",
    "db:studio:local": "cross-env DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:preview": "cross-env NODE_ENV='preview' drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.7",
    "@trpc/client": "11.0.0-rc.660",
    "@trpc/next": "11.0.0-rc.466",
    "@trpc/react-query": "11.0.0-rc.466",
    "@trpc/server": "11.0.0-rc.660",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "sonner": "^1.7.1",
    "superjson": "^2.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.21.4",
    "drizzle-orm": "^0.30.10",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-next-on-pages": "^1.13.7",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vercel": "^39.2.2",
    "wrangler": "^3.95.0"
  },
  "packageManager": "pnpm@9.15.0"
}
